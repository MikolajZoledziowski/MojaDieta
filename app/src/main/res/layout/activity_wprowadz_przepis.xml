<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.d.mojadieta.wprowadz_przepis">


    <EditText
        android:id="@+id/tluszcze"
        android:layout_width="363dp"
        android:layout_height="109dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="304dp"
        android:ems="10"
        android:hint="Sposób przyrządzenia przepisu"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="310dp" />

    <Button
        android:id="@+id/button_przepisy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:onClick="powrot"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/przyciski"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textView_przepisy"
        android:layout_width="194dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dodaj_produkt"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="206dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/przyciski"
        android:onClick="wybiez"
        android:text="Dodaj produkt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:ems="10"
        android:inputType="number"
        android:text="Dodawanie produktów"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_przepisy" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:hint="Waga:"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="361dp"
        android:layout_height="81dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:hint="Składniki"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.26" />

</android.support.constraint.ConstraintLayout>
